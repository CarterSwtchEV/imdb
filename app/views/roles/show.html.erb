<div class="page-header">
  <h3>Role #<%= @role.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Movies</dt>
      <dd>
        <% if @role.movies.present? %>
          <a href="/movies/<%= @role.movies_id %>">
            <%= @role.movies.title %>
          </a>
        <% end %>
      </dd>

      <dt>Actors</dt>
      <dd>
        <% if @role.actors.present? %>
          <a href="/actors/<%= @role.actors_id %>">
            <%= @role.actors.created_at %>
          </a>
        <% end %>
      </dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/roles" class="btn btn-primary">
        Back
      </a>
      <a href="/roles/<%= @role.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_role/<%= @role.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
